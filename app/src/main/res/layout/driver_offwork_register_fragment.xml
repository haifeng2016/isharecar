<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/passenger_register_Linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/passenger_register_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/clock"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/clock"/>

            <EditText
                android:id="@+id/passenger_go_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="@string/passenger_go_time"/>
        </LinearLayout>

        <TextView
            android:id="@+id/fengefu"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/passenger_register_info1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/people"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/people"/>

            <EditText
                android:id="@+id/passenger_go_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="@string/driver_go_number"
                android:inputType="number"/>
        </LinearLayout>

        <TextView
            android:id="@+id/fengefu3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/on_the_way"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/route"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/route"/>

            <EditText
                android:id="@+id/by_the_way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:maxLength="20"
                android:background="@null"
                android:hint="@string/ontheway"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/fengefu1"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <LinearLayout
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/passenger_register_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/addr1"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/addr1"/>

            <EditText
                android:id="@+id/passenger_home_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/passenger_home_add"/>
        </LinearLayout>

        <TextView
            android:id="@+id/fengefu2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/terminaladdr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/addr2"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/addr2"/>

            <EditText
                android:id="@+id/passenger_work_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="@string/passenger_work_add"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/driver_reservation"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/roundedbtnshape"
        android:text="@string/driver_reservation"
        android:textColor="@color/white"/>

</LinearLayout>